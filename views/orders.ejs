    <script>
    var placeid = ""
    var items = [];
    var i = 0;
    var unit = '';

    function set() {
      document.getElementById('resultid').value = placeid;
    }
    const options = {
      componentRestrictions: {
        country: "in"
      }
    };
    new AddressAutocomplete('#autocomplete', options, function(result, rawResponse) {
      console.log(result);
      placeid = rawResponse.place_id
      set()
    });

    function handleClick(el) {
      unit = el.value;
      let active = document.querySelector('.active')
      if (active) {
        $(active).removeClass('active btn-primary');
        $(active).addClass('btn-secondary');
      }
      $(el).removeClass('btn-secondary')
      $(el).addClass('active btn-primary');
    }

    function buildList() {
      i++;
      let item = document.getElementById('list-item').value;
      let qty = document.getElementById('quantity').value + ' ' + unit;
      items.push([...item, quantity])
      $('.table').find('tbody').append(
        `<tr id="${i-1}"><td>${item}</td><td>${qty}</td><td><i class="fa fa-trash-alt" data-toggle="popover" data-trigger="hover" data-content="Some content" onclick="deleteFromList(${i-1})"></i></td></tr>`
      )
      document.getElementById('items').value = items;

      document.getElementById('list-item').value = '';
      document.getElementById('quantity').value = 0;
    }

    function deleteFromList(item) {
      items.splice(item, 1);
      $(`#${item}`).remove();
      i--;
    }
    </script>
